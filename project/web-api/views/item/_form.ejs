<div class="form-group">
  <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Nombre </label>

  <div class="col-sm-9">
    <input type="text" name="firstName" value="<%= item.name %>" placeholder="Name"
           class="col-xs-10 col-sm-5" autocomplete="off"/>
  </div>
</div>


<div class="form-group">
  <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Descripción </label>

  <div class="col-sm-9">
    <textarea class="col-xs-10 col-sm-5" placeholder="Descripción"><%= item.description %></textarea>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Precio </label>

  <div class="col-sm-9">
    <input type="text" name="lastName" value="<%= item.price %>" placeholder="Precio"
           class="col-xs-10 col-sm-5" autocomplete="off"/>
  </div>
</div>


<div class="form-group">
  <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Estado </label>

  <div class="col-sm-9">
    <select class=" col-xs-10 col-sm-5">
      <option value="ACTIVE"  <%= item.active ? 'selected="selected"' : '' %> >Activo</option>
      <option value="INACTIVE" <%= item.active ? 'selected="selected"' : '' %>>Inactivo</option>
    </select>
  </div>
</div>







