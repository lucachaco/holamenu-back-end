<div class="page-header">
  <h1>
    Editar item
  </h1>
</div>

<div class="row">
  <div class="col-xs-12">
    <!-- PAGE CONTENT BEGINS -->
    <!-- <form action="/api/categories" method="post" class="form-horizontal" role="form">-->
    <form action="/api/categories/<%= category.id %>" method="post" class="form-horizontal" role="form">
      <!--Specification doesnt allow put or delete method in HTML forms-->
      <input type="hidden" name="_method" value="put">

      <%- partial('_form.ejs') %>

      <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
          <button class="btn btn-info" type="submit">
            <i class="ace-icon fa fa-check bigger-110"></i>
            Submit
          </button>

          &nbsp; &nbsp; &nbsp;
          <button class="btn" type="reset">
            <i class="ace-icon fa fa-undo bigger-110"></i>
            Reset
          </button>
        </div>
      </div>

    </form>

  </div>
</div>
